<div class="text-center" style="padding: 15px">
  <div class="form-signin w-50 m-auto">
    <h1 class="h3 mb-3 fw-normal">S'inscrire</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label 'Email:' %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Entre ton email", class: 'form-control text-center' %>
      </div><br/>

      <div class="form-group">
        <%= f.label 'Mot de passe:' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®re minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Entre ton mot de passe", class: 'form-control text-center' %>
      </div><br/>

      <div class="form-group">
        <%= f.label 'Confirme ton mot de passe:' %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Entre ton mot de passe", class: 'form-control text-center' %>
      </div><br/>

      <div class="actions">
        <%= f.submit "S'inscrire", class: 'w-100 btn btn-lg btn-primary' %>
      </div><br/>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>